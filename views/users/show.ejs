<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " + user.lastName %></h1>
        <div class="thumbnail">
            <img src="" alt="user profile image">
            <div class="caption"><a href="mailto:<%= user.username %>"><%= user.username %></a></div>
        </div>
        <h3>Books <%= user.firstName %> is selling</h3>
        <ul>
            <% books.forEach(function(book) { %>
                <li><a href="/books/<%= book.id %>"><%= book.name %></a></li>
            <% }); %>
        </ul>
    </div>
    <div class="col-md-8">
        <h3><%= user.firstName %>'s Books:</h3>

    </div>
</div>

<% include ../partials/footer %>