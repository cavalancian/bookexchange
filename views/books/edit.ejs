<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= book.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/books/<%= book._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="book[name]">Book Name:</label>
                <input class="form-control" type="text" value="<%= book.name %>" name="book[name]" required="required">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%= book.price %>" name="book[price]" min="0.01" step="0.01" max="500.00" required="required">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= book.isbn %>" name="book[isbn]" required="required">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= book.description %>" name="book[description]" required="required">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/books/<%= book._id %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>