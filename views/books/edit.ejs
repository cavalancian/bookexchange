<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= book.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/books/<%= book._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= book.name %>" name="book[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%= book.price %>" name="book[price]" min="0.01" step="0.01" max="100.00">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= book.image %>" name="book[image]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= book.description %>" name="book[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/books">Back</a>
    </div>
</div>

<% include ../partials/footer %>